<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="cpp:Site">
    <jcr:content
            jcr:primaryType="cpp:SiteConfiguration"
            jcr:title="A Site for a Blog"
            jcr:description="A Pages Components template to crerate a site for a Blog."
            sling:resourceType="composum/pages/stage/edit/site"
            siteComponentSettings="composum/pages/components/site/settings"
            allowedChildTemplates="[
                ^(.*/)?composum/pages/options/blog/templates/blog$,
                ^(.*/)?composum/pages/templates/page/meta/sitemap$
            ]">
        <style
                jcr:primaryType="nt:unstructured"
                category.edit="composum.pages.components.edit"
                category.view="composum.pages.components.blog"/>
        <logo
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/pages/components/element/image"
                imageRef="${site}/assets/symbols/Composum-color.svg"/>
        <languages
                jcr:primaryType="nt:unstructured">
            <english
                    jcr:primaryType="nt:unstructured"
                    key="en" label="english"/>
            <german
                    jcr:primaryType="nt:unstructured"
                    key="de" label="deutsch"/>
        </languages>
    </jcr:content>
    <home/>
    <meta/>
    <assets/>
</jcr:root>
