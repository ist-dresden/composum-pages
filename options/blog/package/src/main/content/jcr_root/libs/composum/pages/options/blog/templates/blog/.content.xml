<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            jcr:title="Pages Components Blog Stage"
            jcr:description="The root of a blog."
            sling:resourceType="composum/pages/options/blog/components/page/blog"
            allowedChildTemplates="[
                ^(.*/)?pages/options/blog/templates/(article|sequence)$,
                ^(.*/)?pages/components/templates/page/content$
            ]">
        <navigation jcr:primaryType="nt:unstructured"
                isNavRoot="{Boolean}true"/>
        <style jcr:primaryType="nt:unstructured"
                theme="composum/pages/options/blog/theme"/>
        <top
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/iparsys">
            <cpp:design
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="composum/pages/stage/edit/page/design"
                    typePatterns="[
                        ^(/[^/]+/)?composum/pages/components/container/iparsys$
                    ]"
                    allowedElements="[
                        ^(/[^/]+/)?composum/pages/components/element/text$
                    ]">
            </cpp:design>
        </top>
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <cpp:design
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="composum/pages/stage/edit/page/design"
                    typePatterns="[
                        ^(/[^/]+/)?composum/pages/components/container/parsys$
                    ]"
                    allowedElements="[
                        ^(/[^/]+/)?composum/pages/options/blog/components/(collection)/.*$,
                        ^(/[^/]+/)?composum/pages/components/(element|composed)/.*$,
                        ^(/[^/]+/)?composum/pages/components/container/(section)$
                    ]">
            </cpp:design>
        </main>
        <aside
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/iparsys">
            <cpp:design
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="composum/pages/stage/edit/page/design"
                    typePatterns="[
                        ^(/[^/]+/)?composum/pages/components/container/iparsys$
                    ]"
                    allowedElements="[
                        ^(/[^/]+/)?composum/pages/options/blog/components/(collection)/.*$,
                        ^(/[^/]+/)?composum/pages/components/element/text$
                    ]">
            </cpp:design>
        </aside>
        <bottom
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/iparsys">
            <cpp:design
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="composum/pages/stage/edit/page/design"
                    typePatterns="[
                        ^(/[^/]+/)?composum/pages/components/container/iparsys$
                    ]"
                    allowedElements="[
                        ^(/[^/]+/)?composum/pages/components/navigation/siblings$,
                        ^(/[^/]+/)?composum/pages/components/element/text$
                    ]">
            </cpp:design>
        </bottom>
    </jcr:content>
</jcr:root>