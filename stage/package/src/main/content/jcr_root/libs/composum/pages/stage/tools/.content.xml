<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
        jcr:primaryType="nt:unstructured"
        jcr:description="the tools collection declaration for all tools shipped with Composum Pages"
        sling:resourceType="composum/pages/tools/collection">
    <pagesTree
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/main/pages"
            categories="[navigation,browse,edit,develop]"
            iconClass="sitemap"
            hint="Pages Tree"
            title="Pages Tree"
            order="{Long}60"/>
    <assets
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/main/assets"
            categories="[navigation,edit,develop]"
            iconClass="picture-o"
            hint="Assets Selector"
            title="Assets"
            order="{Long}70"/>
    <components
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/main/components"
            categories="[navigation,edit,develop]"
            iconClass="cube"
            hint="Component Selector"
            title="Components"
            order="{Long}80"/>
    <developmentTree
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/main/develop"
            categories="[navigation,develop]"
            iconClass="wrench"
            hint="Development Tree"
            title="Development"
            order="{Long}90"/>
    <siteReleases
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/site/releases"
            categories="[context,edit,develop,site]"
            iconClass="list-ol"
            hint="releases list (closed and current open release)"
            title="Site Releases"
            order="{Long}40"/>
    <siteActivated
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/site/activated"
            categories="[context,edit,develop,site]"
            iconClass="check-square-o"
            hint="pages activated with changes since the previous release"
            title="Changes"
            order="{Long}42"/>
    <siteModified
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/site/modified"
            categories="[context,edit,develop,site]"
            iconClass="pencil-square-o"
            hint="modified but last changes not activated yet"
            title="Modified"
            order="{Long}44"/>
    <pageStatus
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/page/status"
            categories="[status,edit,develop,page,container,element]"
            order="{Long}20"/>
    <pageVersions
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/page/versions"
            categories="[context,edit,develop,page]"
            iconClass="history"
            hint="Versions History"
            title="Versions"
            order="{Long}50"/>
    <pageContent
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/page/content"
            _categories="[context,edit,develop,page]"
            iconClass="cubes"
            hint="Page Content"
            title="Content"
            order="{Long}60"/>
     <pageStatistics
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/page/statistics"
            categories="[context,edit,develop,page]"
            iconClass="bar-chart-o"
            hint="Access Statistics"
            title="Statistics"
            order="{Long}80"/>
    <containerElements
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/container/elements"
            categories="[context,edit,develop,container,element]"
            iconClass="cubes"
            hint="Container Elements"
            title="Elements"
            order="{Long}60"/>
    <somethingContext
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/something/context"
            _categories="[context,edit,develop,something]"
            iconClass="puzzle-piece"
            hint="Resource Properties"
            title="Resource"
            order="{Long}999"/>
    <componentHelp
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/component/help/context"
            categories="[context,edit,develop,page,container,element]"
            iconClass="question-circle-o"
            hint="Component Help"
            title="Help"
            order="{Long}80"/>
    <componentContext
            jcr:primaryType="nt:unstructured"
            sling:resourceType="composum/pages/stage/edit/tools/component/edit"
            categories="[context,develop,page,container,element]"
            iconClass="wrench"
            hint="Component Implementation"
            title="Component"
            order="{Long}90"/>
</jcr:root>
