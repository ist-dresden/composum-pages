<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
          jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            sling:resourceType="composum/pages/stage/edit/tools/component/help/page"
            template="/libs/composum/pages/stage/edit/tools/component/help/template">
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/stage/edit/tools/component/help/parsys">
            <text_01
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/text"
                    text="An illustration component combines an image with a set of &apos;hotspots&apos; which are placed inside of the image and opening a popup window on click with a text message for the marked image detail."/>
            <image
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/image"
                    imageRef="/libs/composum/pages/components/assets/illustration.png"/>
            <text_2
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/text"
                    text="The annotations - the &apos;items&apos; of an illustration - can be added as separate elements inside of the illustration component. An item is placed using a percentage position property. The items can be numbered or illustrated by a symbol."/>
            <image_1646964069
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/image"
                    imageRef="/libs/composum/pages/components/assets/illustration-item.png"/>
        </main>
    </jcr:content>
</jcr:root>
