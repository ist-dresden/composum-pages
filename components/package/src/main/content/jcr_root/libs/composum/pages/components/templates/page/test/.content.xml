<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            jcr:title="Pages Components Test Page"
            jcr:description="A page which can contain special test components."
            sling:resourceType="composum/pages/components/page"
            allowedChildTemplates="[
                ^(.*/)?pages/components/templates/page/([^/]+|subsite/root)$,
                ^(.*/)?pages/options/.*/template(s(/page)?(/.+)?)?$
            ]">
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <cpp:design
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="composum/pages/stage/edit/page/design"
                    typePatterns="[
                        ^(/[^/]+/)?composum/pages/components/container(/(parsys|iparsys))?$
                    ]"
                    allowedElements="[
                        ^(/[^/]+/)?composum/pages/components/.+$
                    ]">
                <column
                        jcr:primaryType="nt:unstructured"
                        typePatterns="[
                            ^(/[^/]+/)?composum/pages/components/container/row/column$
                        ]"
                        allowedElements="[
                            ^(/[^/]+/)?composum/pages/components/.+$
                        ]">
                </column>
            </cpp:design>
        </main>
    </jcr:content>
</jcr:root>
