<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            sling:resourceType="composum/pages/components/page/errorpage"
            template="/libs/composum/pages/components/templates/page/meta/errorpage"
            isTemplate="{Boolean}false">
        <top
                jcr:primaryType="cpp:Container">
            <title
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/title"
                    subtitle="the sites general error page for the &apos;404&apos; errorcode"
                    title="404 - ooops... not found">
                <image
                        jcr:primaryType="cpp:Element"
                        imageRef="/content/shared/composum/pages/components/assets/background/synchlotron.jpg"/>
            </title>
        </top>
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
            <row
                    jcr:primaryType="cpp:Container"
                    sling:resourceType="composum/pages/components/container/row"
                    columns="-12-"
                    path="">
                <column-0
                        jcr:primaryType="cpp:Container"
                        sling:resourceType="composum/pages/components/container/row/column">
                    <text
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/element/text"
                            path=""
                            text="&lt;p>The requested page was not found on this site.&lt;/p>&lt;p>Use our sitemap, the navigation menu or search for the appropriate page.&lt;/p>"/>
                    <field
                            jcr:primaryType="cpp:Element"
                            sling:resourceType="composum/pages/components/search/field"
                            path=""
                            placeholderText="search term"
                            searchResultPath="/content/sites/mysite/meta/search"/>
                </column-0>
            </row>
        </main>
    </jcr:content>
</jcr:root>