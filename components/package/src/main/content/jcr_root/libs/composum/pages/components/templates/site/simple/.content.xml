<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
        jcr:primaryType="cpp:Site">
    <jcr:content
            jcr:primaryType="cpp:SiteConfiguration"
            jcr:title="A Simple Site"
            jcr:description="An empty site template with only one language and a standard components homepage."
            sling:resourceType="composum/pages/stage/edit/site"
            allowedChildTemplates="[
                (.*/)?templates/(page/)?home(page)?$
            ]">
        <style
                jcr:primaryType="nt:unstructured"
                category.edit="composum.pages.components.edit"
                category.view="composum.pages.components.view"/>
        <languages
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/pages/stage/edit/site/languages">
            <english
                    jcr:primaryType="nt:unstructured"
                    key="en" label="english" default="true"/>
        </languages>
        <releases
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/pages/stage/edit/site/releases">
        </releases>
    </jcr:content>
    <meta/>
    <home/>
    <assets/>
</jcr:root>
