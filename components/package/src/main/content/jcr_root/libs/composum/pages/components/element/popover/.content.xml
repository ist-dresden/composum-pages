<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="cpp:Component"
        sling:resourceSuperType="composum/pages/components/element/text"
        jcr:description="a link which opens a rich text in a popover view"
        jcr:title="Popover"
        category="[Text,Link,Blueprint]">
    <jcr:content
            jcr:primaryType="nt:unstructured">
        <properties
                jcr:primaryType="nt:unstructured">
            <linkText
                    jcr:primaryType="nt:unstructured"
                    i18n="{Boolean}true"
                    text="plain"/>
            <title
                    jcr:primaryType="nt:unstructured"
                    i18n="{Boolean}true"
                    text="plain"/>
            <text
                    jcr:primaryType="nt:unstructured"
                    i18n="{Boolean}true"
                    text="rich"/>
            <textAlignment
                    jcr:primaryType="nt:unstructured"/>
            <placement
                    jcr:primaryType="nt:unstructured"/>
            <isButton
                    jcr:primaryType="nt:unstructured"/>
        </properties>
    </jcr:content>
</jcr:root>
