<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            jcr:title="Pages Component Scene Page"
            jcr:description="A page to embed components for testing."
            sling:resourceType="composum/pages/components/page/scene"
            allowedChildTemplates="[
            ]">
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/components/container/parsys">
        </main>
        <cpp:design
                jcr:primaryType="nt:unstructured"
                sling:resourceType="composum/pages/stage/edit/page/design"
                typePatterns="[
                        ^(/[^/]+/)?.*/container(/(parsys|iparsys|row/column))?$
                    ]"
                allowedElements="[^.+$]">
        </cpp:design>
    </jcr:content>
</jcr:root>
