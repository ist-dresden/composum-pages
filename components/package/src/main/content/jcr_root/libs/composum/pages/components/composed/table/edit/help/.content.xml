<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:cpp="http://sling.composum.com/pages/1.0"
        xmlns:jcr="http://www.jcp.org/jcr/1.0"
        xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
        xmlns:sling="http://sling.apache.org/jcr/sling/1.0"
        jcr:primaryType="cpp:Page">
    <jcr:content
            jcr:primaryType="cpp:PageContent"
            sling:resourceType="composum/pages/stage/edit/tools/component/help/page"
            template="/libs/composum/pages/stage/edit/tools/component/help/template">
        <main
                jcr:primaryType="cpp:Container"
                sling:resourceType="composum/pages/stage/edit/tools/component/help/parsys">
            <text_01
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/text"
                    text="&lt;p>A table component to create an HTML table element as a collection of rows with inserted cells. The table serves as a container into which rows can be inserted (edited / moved / deleted), and each row is a container into which cells can be inserted.&lt;br>&lt;/p>">
                <i18n
                        jcr:primaryType="nt:unstructured">
                    <de
                            jcr:primaryType="nt:unstructured"
                            text="Eine Tabelle ist eine Komponente zum erzeugen einer HTML Tabelle. Die Tabelle ist ein Container, in den Zeilen (row) eingefügt (und rearrangiert) werden können. Jede Zeile wiederum ist ein Container in den Zellen eingefügt werden können.&lt;br>"/>
                </i18n>
            </text_01>
            <image
                    jcr:primaryType="cpp:Element"
                    sling:resourceType="composum/pages/components/element/image"
                    imageRef="/libs/composum/pages/components/assets/table.png"/>
        </main>
    </jcr:content>
</jcr:root>
