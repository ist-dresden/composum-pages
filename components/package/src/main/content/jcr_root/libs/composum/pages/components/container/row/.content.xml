<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:primaryType="cpp:Component"
          jcr:description="a layout row which controls a set of columns defined by a column setup rule property"
          jcr:title="Row"
          category="[Layout,Blueprint]"
          sling:resourceSuperType="composum/pages/components/container"
          allowedElements="[composum/pages/components/container/row/column]">
    <jcr:content jcr:primaryType="nt:unstructured">
        <properties jcr:primaryType="nt:unstructured">
            <title jcr:primaryType="nt:unstructured" i18n="{Boolean}true" text="plain"/>
            <anchor jcr:primaryType="nt:unstructured"/>
            <columns jcr:primaryType="nt:unstructured" required="{Boolean}true"/>
        </properties>
    </jcr:content>
</jcr:root>
